@page "/"

<h1>Hello, world!</h1>

<h3 class="bg-secondary text-white">@MyName</h3>

<div class="form-group">
    <label>Name:</label>
    <input type="text" class="form-control" @onchange="NameChange" />
</div>

<SingleHandler></SingleHandler>
<SelectComponent></SelectComponent>
<CheckBox></CheckBox>
<RadioComponent></RadioComponent>
<TwoWayDataBind></TwoWayDataBind>
@code {
    public string MyName { get; set; }

    private void NameChange(ChangeEventArgs e)
    {
        MyName = e.Value as string;
       
    }
}
